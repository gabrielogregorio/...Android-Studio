<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#dd3355"
        android:padding="10dp"
        android:textSize="30dp"
        android:text="Sistema de delivery" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="80dp"
            android:layout_margin="8dp"
            android:textColor="#dd3355"
            android:text="Bebidas"/>

    </LinearLayout>

   <LinearLayout
       android:background="#ffffff"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="8dp"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:background="#dddddd"
           android:layout_height="1dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:width="60dp"
           android:enabled="true"
           android:inputType="number"
           android:id="@+id/edtCoca"/>

       <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coca-cola "
            android:layout_weight="1"
            android:id="@+id/chkCoca"/>
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ "
            android:textColor="#44aa88" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="#44aa88"
            android:id="@+id/txValorCoca"/>

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=",00"
            android:textColor="#44aa88" />
    </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:background="#dddddd"
           android:layout_height="1dp"/>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="60dp"
                android:enabled="true"
                android:inputType="number"
                android:id="@+id/edtFanta"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fanta Limão"
                android:layout_weight="1"
                android:id="@+id/chkFanta"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ "
                android:textColor="#44aa88" />

           <TextView
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:id="@+id/txValorFanta"
                android:textColor="#44aa88" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",00"
                android:textColor="#44aa88" />
        </LinearLayout>


       <TextView
           android:layout_width="match_parent"
           android:background="#dddddd"
           android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="60dp"
                android:enabled="true"
                android:inputType="number"
                android:id="@+id/edtSuco"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Suco  "
                android:id="@+id/chkSuco"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ "
                android:textColor="#44aa88" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#44aa88"
                android:id="@+id/txValorSuco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",00"
                android:textColor="#44aa88" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Você é?"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdMaiorIdade"
                android:text="Maior de idade"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdMenorIdade"
                android:text="Menor de idade"/>


        </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:background="#dddddd"
           android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtResultado"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCalcular"
                android:text="Calcular total"
                android:layout_margin="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLimpar"
                android:text="Limpar total"
                android:layout_margin="3dp"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>